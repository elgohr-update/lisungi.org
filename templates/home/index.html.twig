{% extends 'base.html.twig' %}

{% block body %}
    <div class="home">
        <div class="container-fluid">
            <div class="home-header p-2 p-lg-5">
                <div class="row align-items-center">
                    <div class="col-12 col-xl-3 home-header-menu d-none d-xl-block">
                        <a href="mailto:{{ team_email }}">
                            {{ 'header.contact_us'|trans }}
                        </a>
                    </div>
                    <div class="col-12 col-xl-6 text-center">
                        <h1 class="sr-only">
                            {{ 'site.name'|trans }}
                        </h1>

                        <a href="{{ path('homepage') }}">
                            <img src="{{ asset(localized_assets_folder ~ 'res/logo.png') }}" class="home-header-logo" alt="{{ 'site.name'|trans }}" />
                        </a>
                    </div>
                    <div class="col-12 col-xl-3 text-center text-xl-right home-header-socials">
                        <div class="mt-3 mb-4 mt-lg-4 mb-lg-0 mt-xl-0 mb-xl-0">
                            {% include '_include/' ~ app.request.locale ~ '/homepage_social.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="home-row">
            <div class="home-row-half bg-primary text-white">
                <div class="m-4 p-3 m-lg-5 p-lg-5">
                    <a href="{{ path('process_request') }}" class="home-row-half-button text-white">
                        <div class="home-row-half-button-icon d-none d-lg-block">
                            {{ include('_icons/arrow.html.twig') }}
                        </div>
                        <div class="home-row-half-button-label">
                            {{ 'home.work-title'|trans }}
                        </div>
                    </a>

                    <div class="home-row-half-details mt-3 mb-4">
                        <p>
                            {{ 'home.work-intro'|trans }}
                        </p>
                        {{ 'home.work-request'|trans }}
                    </div>

                    <div class="row no-gutters text-center">
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('process_request') }}"
                               class="btn btn-primary btn-lg border-white border mr-xl-3">
                                {{ 'label.request-help'|trans }}
                            </a>
                        </div>
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('content_how') }}"
                               class="btn btn-link btn-lg text-white mt-3 mt-xl-0">
                                {{ 'label.how-work'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-row-half justify-content-start bg-info text-white">
                <div class="m-4 p-3 m-lg-5 p-lg-5">
                    <a href="{{ path('process_helper') }}" class="home-row-half-button text-white">
                        <div class="home-row-half-button-icon d-none d-lg-block">
                            {{ include('_icons/arrow.html.twig') }}
                        </div>
                        <div class="home-row-half-button-label">
                            {{ 'home.title'|trans }}
                        </div>
                    </a>

                    <div class="home-row-half-details mt-3 mb-4">
                        <p>
                            {{ 'home.young-healthy'|trans }}
                        </p>
                        {{ 'home.intro'|trans }}
                    </div>

                    <div class="row no-gutters text-center">
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('process_helper') }}"
                               class="btn btn-info btn-lg border-white border mr-xl-3">
                                {{ 'label.offer-help'|trans }}
                            </a>
                        </div>
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('content_how') }}"
                               class="btn btn-link btn-lg text-white mt-3 mt-xl-0">
                                {{ 'label.how-work'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="home-row-full bg-warning">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10">
                    <div class="m-4 p-3 mx-lg-5 p-lg-5">
                        <a href="{{ path('process_volunteer') }}" class="home-row-half-button text-dark">
                            <div class="home-row-half-button-icon d-none d-lg-block">
                                {{ include('_icons/arrow.html.twig') }}
                            </div>
                            <div class="home-row-half-button-label">
                                {{ 'home.volunteer'|trans }}
                            </div>
                        </a>

                        <div class="home-row-half-details mt-3 mb-4">
                            <p>
                                {{ 'home.volunteer.young-healthy'|trans }}
                            </p>
                            {{ 'home.volunteer.intro'|trans }}
                        </div>

                        <div class="row no-gutters text-center">
                            <div class="col-12 col-xl-auto">
                                <a href="{{ path('process_volunteer') }}"
                                   class="btn btn-warning border border-dark btn-lg text-dark mr-xl-3">
                                    {{ 'label.offer-help'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="home-ecosystem p-4 p-lg-5" id="invite">
            <div class="home-share text-center mb-5">
                <div class="text-muted mb-2">
                    {{ 'social.share-intro'|trans }}
                </div>

                <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('homepage')|url_encode }}" title="{{ 'social.share-facebook'|trans }}" target="_blank" rel="noreferrer noopener">
                    {{ include('_icons/facebook.html.twig') }}
                </a>
                <a href="https://twitter.com/intent/tweet?text={{ url('homepage') }}" title="{{ 'social.share-twitter'|trans }}" target="_blank" rel="noreferrer noopener">
                    {{ include('_icons/twitter.html.twig') }}
                </a>
                <a href="https://telegram.me/share/url?url={{ url('homepage') }}" title="{{ 'social.share-facebook'|trans }}" target="_blank" rel="noreferrer noopener">
                    {{ include('_icons/telegram.html.twig') }}
                </a>
                <a href="https://wa.me/?text={{ url('homepage') }}" title="{{ 'social.share-facebook'|trans }}" target="_blank" rel="noreferrer noopener">
                    {{ include('_icons/whatsapp.html.twig') }}
                </a>
            </div>

            <div class="home-ecosystem-feedbacks mb-5">
                {% include '_include/' ~ app.request.locale ~ '/homepage_footer.html.twig' %}

                {#
                    <h5 class="font-weight-normal mb-5 p-4">
                        {% trans with {'count' : countTotalHelpers|number_format(0, ',', ' ') } %}home.number-volunteers{% endtrans %}
                        <br />
                        {% trans with {'percentage' : (((countTotalOwners - countUnmatchedOwners) / countTotalOwners) * 100)|number_format(2) } %}home.percentage-resolved{% endtrans %}
                    </h5>

                    <h5>
                        {{ 'label.testimonials'|trans }}
                    </h5>

                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="p-3 p-lg-5">
                                <blockquote>
                                    <div>
                                        <p>
                                            {{ 'home.testimonial-one'|trans }}
                                        </p>

                                        <cite>{{ 'home.testimonial-one-from'|trans }}</cite>
                                    </div>
                                </blockquote>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="p-3 p-lg-5">
                                <blockquote>
                                    <div>
                                        <p>
                                            {{ 'home.testimonial-two'|trans }}
                                        </p>

                                        <cite>{{ 'home.testimonial-two-from'|trans }}</cite>
                                    </div>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>

                #}
            </div>
        </div>

        {{ include('_include/footer.html.twig') }}
    </div>
{% endblock %}
