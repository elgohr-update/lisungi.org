{% extends 'page_base.html.twig' %}

{% block title %}{% trans %}label.offer-help{% endtrans %} | {% trans %}site.title{% endtrans %}{% endblock %}

{% block content %}
    <div class="process-box">
        <div class="bg-light p-3 p-lg-4">
            <h3 class="text-center font-weight-bold mb-4">
                {% trans %}label.offer-help{% endtrans %}
            </h3>

            <div class="process-details mb-4 pb-3">
                <p>{% trans %}offer.intro-one{% endtrans %}</p>
                <p>{% trans %}offer.intro-two{% endtrans %}</p>
                <p>{% trans %}offer.intro-three{% endtrans %}</p>
                <p>{% trans %}offer.intro-four{% endtrans %}</p>

                <a href="{{ path('content_how') }}">
                    {% trans %}label.how-platform-works{% endtrans %}
                </a>
            </div>

            {{ form_start(form) }}

            {{ form_errors(form) }}

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <div class="row">
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.firstName, {'label': 'label.name-first-required'}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.lastName, {'label': 'label.name-last-required'}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.age, {'label': 'label.age-required'}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.zipCode, {
                            'label': 'label.postcode-required',
                            'help': 'help.postcode'
                        }) }}
                    </div>
                </div>

                {{ form_row(form.email, {'label': 'label.email-required', 'help': 'help.email'}) }}
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                {{ form_row(form.canBuyGroceries, {
                    'label': 'label.can-buy-groceries',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.can-buy-groceries'
                }) }}
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                {{ form_row(form.acceptVulnerable, {
                    'label': 'label.accept-vulnerable',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.accept-vulnerable'
                }) }}
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <div class="mb-3">
                    {{ form_row(form.canBabysit, {
                        'label': 'label.can-babysit',
                        'label_attr': { 'class': 'checkbox-custom' },
                        'help': 'help.can-babysit'
                    }) }}
                </div>

                <div class="p-4" id="babysit-fields">
                    <div class="mb-3">
                        {{ form_row(form.haveChildren, {
                            'label': 'label.have-children',
                            'label_attr': { 'class': 'checkbox-custom' },
                            'help': 'help.have-children'
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.babysitMaxChildren, {
                            'label': 'label.babysit-max-children'
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.babysitAgeRanges, {
                            'label': 'label.babysit-ages'
                        }) }}
                    </div>
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-5">
                {{ form_row(form.confirm, {
                    'label': 'label.confirm',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.confirm'
                }) }}
            </div>

            <div class="text-center mb-5">
                <button type="submit" class="btn btn-lg btn-primary">
                    {% trans %}label.send-proposal{% endtrans %}
                </button>

                <div class="mt-3">
                    <strong class="text-muted">
                        {% trans %}label.revise-proposal{% endtrans %}
                    </strong>
                </div>
            </div>

            {{ form_end(form) }}

            <div class="legalities pt-5">
                {% trans %}footer.data-statement{% endtrans %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('helper') }}
{% endblock %}
