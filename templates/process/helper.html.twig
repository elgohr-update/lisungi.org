{% extends 'page_base.html.twig' %}

{% block title %}{{ 'label.offer-help'|trans }} | {{ 'site.title'|trans }}{% endblock %}

{% block content %}
    <div class="process-box">
        <div class="bg-light p-3 p-lg-4">
            <h3 class="text-center font-weight-bold mb-4">
                {{ 'label.offer-help'|trans }}
            </h3>

            <div class="process-details mb-4 pb-3">
                <p>{{ 'offer.intro-one'|trans|raw }}</p>
                <p>{{ 'offer.intro-two'|trans|raw }}</p>
                <p>{{ 'offer.intro-three'|trans|raw }}</p>
                <p>{{ 'offer.intro-four'|trans|raw }}</p>

                <a href="{{ path('content_how') }}">
                    {{ 'label.how-platform-works'|trans }}
                </a>
            </div>

            {{ form_start(form) }}

            {{ form_errors(form) }}

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <div class="row">
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.firstName, {'label': 'label.name-first-required'|trans}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.lastName, {'label': 'label.name-last-required'|trans}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.locality, {'label': 'label.locality-required'|trans}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.company, {'label': 'label.company'|trans, 'help': 'help.company'|trans}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.email, {'label': 'label.email-required', 'help': 'help.email'|trans}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        {{ form_row(form.phone, {'label': 'label.phone', 'help': 'help.email'|trans}) }}
                    </div>
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <h5 class="text-muted text-uppercase mb-4">
                    {{ 'label.medical'|trans }}
                </h5>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.masks, 'label.helper-masks'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.masks) }}
                        {{ form_errors(form.masks) }}
                        <small class="form-text text-muted">{{ 'help.how-many-units'|trans }}</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.glasses, 'label.helper-glasses'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.glasses) }}
                        {{ form_errors(form.glasses) }}
                        <small class="form-text text-muted">{{ 'help.how-many-units'|trans }}</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.blouses, 'label.helper-blouses'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.blouses) }}
                        {{ form_errors(form.blouses) }}
                        <small class="form-text text-muted">{{ 'help.how-many-units'|trans }}</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.gel, 'label.helper-gel'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.gel) }}
                        {{ form_errors(form.gel) }}
                        <small class="form-text text-muted">{{ 'help.how-many-ml'|trans }}</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.gloves, 'label.helper-gloves'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.gloves) }}
                        {{ form_errors(form.gloves) }}
                        <small class="form-text text-muted">{{ 'help.how-many-pairs'|trans }}</small>
                    </div>
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <h5 class="text-muted text-uppercase mb-4">
                    {{ 'label.other'|trans }}
                </h5>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.food, 'label.helper-food'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.food) }}
                        {{ form_errors(form.food) }}
                        <small class="form-text text-muted">{{ 'help.food'|trans }}</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-lg-5">
                        {{ form_label(form.soap, 'label.helper-soap'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.soap) }}
                        {{ form_errors(form.soap) }}
                        <small class="form-text text-muted">{{ 'help.how-many-ml'|trans }}</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-5">
                        {{ form_label(form.other, 'label.helper-other'|trans) }}
                    </div>
                    <div class="col-lg-7">
                        {{ form_widget(form.other) }}
                        {{ form_errors(form.other) }}
                        <small class="form-text text-muted">{{ 'help.other'|trans }}</small>
                    </div>
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                {{ form_row(form.confirm_legal, {
                    'label': 'label.confirm_legal',
                    'label_attr': { 'class': 'checkbox-custom' },
                }) }}
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-5">
                {{ form_row(form.confirm, {
                    'label': 'label.confirm',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.confirm'
                }) }}
            </div>

            <div class="text-center mb-5">
                <button type="submit" class="btn btn-lg btn-primary">
                    {{ 'label.send-proposal'|trans }}
                </button>

                <div class="mt-3">
                    <strong class="text-muted">
                        {{ 'label.revise-proposal'|trans }}
                    </strong>
                </div>
            </div>

            {{ form_end(form) }}

            <div class="legalities pt-5">
                {{ 'footer.data-statement'|trans|raw }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('helper') }}
{% endblock %}
