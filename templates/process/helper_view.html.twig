{% extends 'page_base.html.twig' %}

{% block metas %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block content %}
    <div class="process-box">
        <div class="bg-light p-3 p-lg-4">
            <h3 class="text-center font-weight-bold mb-4">
                {{ 'offer.my-offer'|trans }}
            </h3>

            <div class="process-details">
                {% if success %}
                    <div class="alert alert-success text-center mb-4">
                        {{ 'offer.registered'|trans }}
                    </div>
                {% endif %}

                <div class="px-2 px-lg-3">
                    <div class="mb-3 text-center">
                        <p>
                            <strong>
                                {{ 'offer.keep-link'|trans }}
                            </strong>
                        </p>
                        {{ 'offer.delete-any-time'|trans|raw }}
                    </div>

                    <div class="process-block bg-white p-3 p-lg-4 mb-4">
                        {% trans with {'when': helper.createdAt|localizeddate('medium', 'short') } %}offer.registration-date{% endtrans %}
                    </div>

                    <div class="process-block bg-white p-3 p-lg-4 mb-4">
                        <div class="text-muted text-uppercase">
                            <div class="mb-3">
                                {{ 'social.share-initiative'|trans }}
                            </div>

                            <div class="process-share text-center">
                                <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('homepage')|url_encode }}"
                                   title="{{ 'social.share-facebook'|trans }}" target="_blank" rel="noreferrer noopener">
                                    {{ include('_icons/facebook.html.twig') }}
                                </a>
                                <a href="https://twitter.com/intent/tweet?text={{ url('homepage') }}"
                                   title="{{ 'social.share-twitter'|trans }}" target="_blank" rel="noreferrer noopener">
                                    {{ include('_icons/twitter.html.twig') }}
                                </a>
                                <a href="https://telegram.me/share/url?url={{ url('homepage') }}"
                                   title="{{ 'social.share-telegram'|trans }}" target="_blank" rel="noreferrer noopener">
                                    {{ include('_icons/telegram.html.twig') }}
                                </a>
                                <a href="https://wa.me/?text={{ url('homepage') }}"
                                   title="{{ 'social.share-whatsapp'|trans }}" target="_blank" rel="noreferrer noopener">
                                    {{ include('_icons/whatsapp.html.twig') }}
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <a href="{{ path('process_helper_delete_confirm', {'uuid': helper.uuid}) }}"
                           class="btn btn-primary btn-lg">
                            {{ 'offer.remove'|trans }}
                        </a>

                        <div class="mt-3">
                            <strong class="text-muted">
                                {{ 'offer.delete-to-update'|trans|raw }}
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
