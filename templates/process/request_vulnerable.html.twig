{% extends 'page_base.html.twig' %}

{% block title %}{% trans %}label.request-help{% endtrans %} | {% trans %}site.title{% endtrans %}{% endblock %}

{% block content %}
    <div class="process-box">
        <div class="bg-light p-3 p-lg-4">
            <h3 class="text-center font-weight-bold mb-4">
                {% trans %}request.vulnerable{% endtrans %}
            </h3>

            <div class="process-details mb-4 pb-3">
                <p>
                    {% trans %}request.vulnerable-intro-one{% endtrans %}
                </p>

                <p>
                    {% trans %}request.vulnerable-intro-two{% endtrans %}
                </p>

                <p>
                    {% trans %}request.vulnerable-intro-three{% endtrans %}
                </p>

                <a href="{{ path('content_how') }}">
                    {% trans %}label.how-platform-works{% endtrans %}
                </a>
            </div>

            {{ form_start(form) }}

            {{ form_errors(form) }}

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                {{ form_row(form.isCloseOne, {
                    'label': 'label.relative-entering',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.relative-entering'
                }) }}

                <div class="mt-3" style="display: none" id="field-other">
                    <div class="row">
                        <div class="col-12 col-lg-6 mb-3">
                            {{ form_row(form.ccFirstName, {'label': 'label.your-name-first-required'}) }}
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            {{ form_row(form.ccLastName, {'label': 'label.your-name-last-required'}) }}
                        </div>
                    </div>

                    {{ form_row(form.ccEmail, {'label': 'label.your-email-required'}) }}
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-4">
                <div class="row">
                    <div class="col-12 col-lg-6 mb-3" id="field-firstname">
                        {{ form_row(form.firstName, {'label': 'label.name-first-required'}) }}
                    </div>
                    <div class="col-12 col-lg-6 mb-3" id="field-lastname">
                        {{ form_row(form.lastName, {'label': 'label.name-last-required'}) }}
                    </div>
                </div>

                <div class="mb-3" id="field-zipcode">
                    {{ form_row(form.zipCode, {
                        'label': 'label.postcode-required',
                        'help': 'help.postcode'
                    }) }}
                </div>

                <div id="field-email">
                    {{ form_row(form.email, {'label': 'label.email-required', 'help': 'help.email'}) }}
                </div>
            </div>

            <div class="process-block bg-white p-3 p-lg-4 mb-5">
                {{ form_row(form.confirm, {
                    'label': 'label.confirm',
                    'label_attr': { 'class': 'checkbox-custom' },
                    'help': 'help.confirm'
                }) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                    {% trans %}label.send-request{% endtrans %}
                </button>

                <div class="mt-3">
                    <strong class="text-muted">
                        {% trans %}label.can-change-request{% endtrans %}
                    </strong>
                </div>
            </div>

            {{ form_end(form) }}

            <div class="legalities pt-5">
                {% trans %}footer.data-statement{% endtrans %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('request-vulnerable') }}
{% endblock %}
